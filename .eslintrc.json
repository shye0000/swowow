{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "indent": [
      "error",
      "tab",
      {"SwitchCase": 1}
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-console": 1,
    "no-var": 2,
    "no-debugger": 2,
    "react/jsx-uses-vars": 2,
    "react/prop-types": 0
  },
  "globals": {
    "shallow": true,
    "render": true,
    "describe": true,
    "jest": true,
    "it": true,
    "expect": true,
    "afterEach": true
  }
}